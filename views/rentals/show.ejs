<h1 class="page-header">Rental</h1>

<div class="book-details">
    <div>
        <div class="book-details-btn-grid">
            <a class="btn btn-primary book-details-author-button" href="/customers/<%= rental.customer.id %>">View
                Customer</a>
        </div>
        <div class="book-details-btn-grid">
            <a class="btn btn-primary book-details-author-button" href="/copies/<%= rental.copy.id %>">View Copy</a>
        </div>
    </div>

    <div class="book-details-grid">
        <div class="book-details-label"> ID:</div>
        <div>
            <%= rental.id %>
        </div>
        <div class="book-details-label"> Borrower:</div>
        <div>
            <%= rental.customer.fullName %>
        </div>
        <div class="book-details-label"> Copy:</div>
        <div>
            <%= rental.copy.id %>
        </div>
        <div class="book-details-label"> Borrow Date:</div>
        <div>
            <%= rental.borrowDate.toDateString() %>
        </div>
        <div class="book-details-label"> Expected Return Date:</div>
        <div>
            <%= rental.expectedReturnDate.toDateString() %>
        </div>
        <div class="book-details-label"> Actual Return Date:</div>
        <div>
            <%= rental.actualReturnDate.toDateString() %>
        </div>
        <div class="book-details-label"> Rental Status:</div>
        <div>
            <%= rental.status %>
        </div>
    </div>
</div>