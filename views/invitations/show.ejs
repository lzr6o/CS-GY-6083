<h1 class="page-header">Invitation</h1>

<div class="book-details">
    <div>
        <div class="book-details-btn-grid">
            <a class="btn btn-primary book-details-author-button" href="/authors/<%= invitation.author.id %>">View
                Author</a>
        </div>
        <div class="book-details-btn-grid book-details-author-button">
            <a class="btn btn-primary book-details-author-button" href="/events/<%= invitation.event.id %>">View Event</a>
        </div>
    </div>

    <div class="book-details-grid">
        <div class="book-details-label"> ID:</div>
        <div>
            <%= invitation.id %>
        </div>
        <div class="book-details-label"> Event:</div>
        <div>
            <%= invitation.event.name %>
        </div>
        <div class="book-details-label"> Author:</div>
        <div>
            <%= invitation.author.fullName %>
        </div>
    </div>
</div>