<h2>Search Copy</h2>
<form action="/copies" method="GET">
    <div>
        <label>Status</label>
        <input type="text" name="status" value="<%= searchOptions.status %>">
    </div>
    <button type="submit">Search</button>
</form>
<br>
<% copies.forEach(copy => { %>
    <div>
        <%= copy.id %>
    </div>
    <div>
        <%= copy.status %>
    </div>
    <a href="/copies/<%= copy.id %>">View</a>
    <a href="/copies/<%= copy.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm', { url: `/copies/${copy.id}` }) %>
        <% }) %>