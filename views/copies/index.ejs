<h2 class="page-header">Search Copy</h2>
<form action="/copies" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Status</label>
            <input type="text" name="status" value="<%= searchOptions.status %>">
        </div>
    </div>

    <div class="form-row form-row-end btn-row">
        <button class = "btn btn-primary" 
        type="submit">Search</button>
    </div>
    
</form>
<br>
<% copies.forEach(copy => { %>
    <div class="author-row">
        <div class="author-name"> <%= copy.id %>
        </div>
        <div class="author-name">
            <%= copy.status %>
        </div>
    </div>
    
    
    <div class="form-row form-row-end btn-row">
        <a class="btn btn-primary" 
        href="/copies/<%= copy.id %>">View</a>
        <a class="btn btn-primary" 
        href="/copies/<%= copy.id %>/edit">Edit</a> 
        <%- include('../partials/deleteForm', { url: `/copies/${copy.id}` }) %>
    </div>
        <% }) %>
    