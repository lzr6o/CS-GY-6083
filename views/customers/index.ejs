<h2>Search Customers</h2>
<form action="/customers" method="GET">
    <div>
        <label>First Name</label>
        <input type="text" name="firstName" value="<%= searchOptions.firstName %>">
    </div>
    <div>
        <label>Last Name</label>
        <input type="text" name="lastName" value="<%= searchOptions.lastName %>">
    </div>
    <button type="submit">Search</button>
</form>
<br>
<% customers.forEach(customer=> { %>
    <div>
        <%=customer.firstName%>
            <%=customer.lastName%>
    </div>
    <div>
        <a href="/customers/<%= customer.id %>">
            <img height="150" width="150" src="<%= customer.coverImagePath %>">
        </a>
    </div>
    <a href="/customers/<%= customer.id %>">View</a>
    <a href="/customers/<%= customer.id %>/edit">Edit</a>
    <%- include('../partials/deleteForm', { url: `/customers/${customer.id}` }) %>
        <% }) %>