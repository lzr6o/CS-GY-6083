<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= book.title %>">
</div>
<div>
    <label>Topic</label>
    <input type="text" name="topic" value="<%= book.topic %>">
</div>
<div>
    <label>ISBN</label>
    <input type="number" name="ISBN" value="<%= book.ISBN %>">
</div>
<div>
    <label>Total Copies</label>
    <input type="number" name="totalCopies" min="1" value="<%= book.totalCopies %>">
</div>
<div>
    <label>Copy ID</label>
    <input type="text" name="copyID" value="<%= book.copyID %>">
</div>
<div>
    <label>Author</label>
    <select name="author">
        <% authors.forEach(author => { %>
            <% if (author.id===book.author) { %>
                <option selected label="<%= author.fullName %>" value="<%= author.id %>">
                    <% } else { %>
                <option label="<%= author.fullName %>%>" value="<%= author.id %>">
                    <% } %>
                        <% }) %>
    </select>
</div>
<div>
    <label>Publish Date</label>
    <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' :
    book.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Page Count</label>
    <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%= book.description %></textarea>>
</div>
<div>
    <label>Cover</label>
    <input type="file" name="cover" class="filepond">
</div>