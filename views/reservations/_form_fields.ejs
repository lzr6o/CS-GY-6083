<div class="form-row">
    <div class="form-item">
        <label>Customer</label>
        <select name="customer">
            <% customers.forEach(customer=> { %>
                <% if (customer.id===reservation.customer) { %>
                    <option selected label="<%= customer.fullName %>" value="<%= customer.id %>">
                        <% } else { %>
                    <option label="<%= customer.fullName %>" value="<%= customer.id %>">
                        <% } %>
                            <% }) %>
        </select>
    </div>
    <div class="form-item">
        <label>Room</label>
        <select name="room">
            <% rooms.forEach(room=> { %>
                <% if (room.id===reservation.room) { %>
                    <option selected label="<%= room.number %>" value="<%= room.id %>">
                        <% } else { %>
                    <option label="<%= room.number %>" value="<%= room.id %>">
                        <% } %>
                            <% }) %>
        </select>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label>Date</label>
        <input type="date" name="date" value="<%= reservation.date == null ? '' :
        reservation.date.toISOString().split('T')[0] %>">
    </div>
    <div class="form-item">
        <label>Timeslot</label>
        <select name="timeslot">
            <option value="8 AM to 10 AM">8 AM to 10 AM</option>
            <option value="11 AM to 1 PM">11 AM to 1 PM</option>
            <option value="1 PM to 3 PM">1 PM to 3 PM</option>
            <option value="4 PM to 6 PM">4 PM to 6 PM</option>
        </select>
    </div>
</div>