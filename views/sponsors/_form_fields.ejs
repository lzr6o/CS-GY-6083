<div class="form-row">
    <div class="form-item">
        <label>Type</label>
        <select name="type">
            <option value="Individual">Individual</option>
            <option value="Organization">Organization</option>
        </select>
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label>First Name</label>
        <input type="text" name="firstName" value="<%= sponsor.firstName %>">
    </div>
    <div class="form-item">
        <label>Last Name</label>
        <input type="text" name="lastName" value="<%= sponsor.lastName %>">
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Upload Image</label>
        <input type="file" name="cover" class="book-cover filepond">
    </div>
</div>