<h2>
    <%= event.name %>
</h2>
<img width="150" height="100" src="<%= event.coverImagePath %>">
<div>
    ID: <%= event.id %>
</div>
<div>
    Type: <%= event.type %>
</div>
<div>
    Topic: <%= event.topic.type %>
</div>
<div>
    Description: <%= event.description %>
</div>
<div>
    Start Time: <%= event.startTime %>
</div>
<div>
    End Time: <%= event.endTime %>
</div>
<a href="/events/<%= event.id %>/edit">Edit</a>
<%- include('../partials/deleteForm', { url: `/events/${event.id}` }) %>
<a href="/topics/<%= event.topic.id %>">View Topic</a>